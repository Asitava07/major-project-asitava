<script>
    const c = document.getElementById("coursemodal");

    function openPopup() {
        c.classList.add("open-popup");
    }

    function closePopup() {
        c.classList.remove("open-popup");
    }
</script>

onclick="openPopup()" onclick="closePopup()"
